generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model WorkRecord {
  id          String    @id @default(cuid())
  userId      String
  startTime   DateTime
  endTime     DateTime?
  description String    @default("")
  hourlyRate  Int
  wage        Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([endTime])
}

model User {
  id         String       @id
  email      String       @unique
  hourlyRate Int
  records    WorkRecord[]
}
